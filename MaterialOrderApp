internal import SwiftUI

@main
struct MaterialOrderApp: App {
    @StateObject private var userManager = UserManager()
    
    var body: some Scene {
        WindowGroup {
            if let _ = userManager.currentUser {
                // Если пользователь уже вошёл — показываем главные вкладки
                ContentView()
                    .environmentObject(userManager)
            } else {
                // Если нет — экран входа
                LoginView()
                    .environmentObject(userManager)
            }
        }
    }
}
