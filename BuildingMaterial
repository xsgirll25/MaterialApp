import Foundation

enum BuildingMaterial: String, CaseIterable, Codable {
// Вяжущие материалы
    case cement = "Цемент"
    case lime = "Известь"
    case gypsum = "Гипс"

// Заполнители
    case sand = "Песок"
    case gravel = "Щебень"
    case crushedStone = "Дробленый камень"
// Кирпич и блоки
    case bricks = "Кирпич красный"
    case whiteBricks = "Кирпич белый"
    case silicateBricks = "Кирпич силикатный"
    case cinder = "Шлакоблоки"
    case foamBlocks = "Газобетонные блоки"
    case concreteBlocks = "Бетонные блоки"
// Кровельные материалы
    case slate = "Шифер"
    case roofingFelt = "Рубероид"
    case metalTile = "Металлочерепица"
    case bitumenShingles = "Битумная черепица"
    case ceramicTile = "Керамическая черепица"
// Изоляционные материалы
    case mineralWool = "Минеральная вата"
    case foam = "Пенопласт"
    case expandedPolystyrene = "Экструдированный пенополистирол"
    case fiberGlass = "Стекловата"
    case perlite = "Перлит"
// Отделочные материалы
    case cement_plaster = "Цементная штукатурка"
    case gypsum_plaster = "Гипсовая штукатурка"
    case paint = "Краска"
    case wallpaper = "Обои"
    case tiles = "Плитка"
    case laminate = "Ламинат"
    case parquet = "Паркет"
    case linoleum = "Линолеум"
// Электромонтажные материалы
    case wiring = "Электропроводка"
    case cable = "Кабель"
    case conduit = "Кабель-канал"
    case outlets = "Розетки и выключатели"
    case panels = "Распределительные панели"
// Сантехнические материалы
    case pipes = "Трубы"
    case pvcPipes = "ПВХ трубы"
    case metalPipes = "Металлические трубы"
    case fittings = "Фитинги"
    case valves = "Краны и вентили"
    case radiators = "Радиаторы"
// Строительное оборудование и крепеж
    case nails = "Гвозди"
    case screws = "Саморезы"
    case bolts = "Болты"
    case anchors = "Анкеры"
    case dowels = "Дюбеля"
// Бетонные изделия
    case concreteSlabs = "Бетонные плиты"
    case beams = "Бетонные балки"
    case pipes_concrete = "Бетонные трубы"
    case curbs = "Бордюры"
// Деревянные материалы
    case lumber = "Пиломатериал"
    case boards = "Доски"
    case beams_wood = "Брусья"
    case plywood = "Фанера"
    case osb = "ОСБ"
// Металлические материалы
    case steelRebar = "Арматура стальная"
    case steelSheet = "Листовая сталь"
    case steelProfiled = "Профилированный металл"
    case mesh = "Сетка металлическая"
// Гидроизоляция
    case waterproofing = "Гидроизоляция"
    case membranes = "Мембраны"
    case sealant = "Герметик"
// Стеклянные изделия
    case glassPanes = "Стеклопакеты"
    case mirrors = "Зеркала"
// Прочее
    case adhesive = "Клеевые смеси"
    case leveling = "Выравнивающие смеси"
    case grout = "Затирка"
    case reinforcedGlass = "Сетка стеклотканевая"
}
// Группировка материалов по категориям
